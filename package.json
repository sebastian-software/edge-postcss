{
  "name": "edge-postcss",
  "version": "0.8.5",
  "description": "Edge PostCSS is a collection of carefully chosen and configured PostCSS plugins. Part of the Edge Platform.",
  "main": "postcss.config.js",
  "scripts": {
    "start": "edge start",
    "prod": "edge build",
    "prod:start": "npm run prod && node build/server/main.js",
    "clean": "rimraf build/client/* build/server/*",
    "test": "jest",
    "release": "release-it --github.release --npm.publish --non-interactive",
    "release:minor": "release-it --github.release --npm.publish --non-interactive --increment minor",
    "release:major": "release-it --github.release --npm.publish --non-interactive --increment major"
  },
  "engines": {
    "node": ">=6.0.0",
    "yarn": ">=0.21.3",
    "npm": ">=4.0.0"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": "eslint",
    "*.css": "stylelint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/edge-postcss.git"
  },
  "keywords": [],
  "author": {
    "name": "Sebastian Software",
    "email": "s.werner@sebastian-software.de",
    "url": "sebastian-software.de"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/sebastian-software/edge-postcss/issues"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "core.js"
    ]
  },
  "homepage": "https://github.com/sebastian-software/edge-postcss#readme",
  "dependencies": {
